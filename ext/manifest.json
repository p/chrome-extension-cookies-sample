{
  "name": "Cookie Setter",
  "description": "Cookie setting sample extension",
  "version": "1.0",
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "content_scripts": [{
    "js": ["content.js"],
    "matches":["http://fakehost:8112/*"]
  }],
  "web_accessible_resources":["page.js", "zepto.js"],
  "permissions":[
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "http://faketarget:8192/*",
    "http://fakehost:8112/*"
  ],
  "manifest_version": 2
}
